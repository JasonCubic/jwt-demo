FROM node:14.17.0-alpine3.13

WORKDIR /usr/app

ARG HTTP_PROXY
ARG HTTPS_PROXY

COPY packages/jwt-demo-frontend packages/jwt-demo-frontend
COPY package.json package.json

RUN yarn install --pure-lockfile --proxy "${HTTP_PROXY}" --https-proxy "${HTTPS_PROXY}" \
&& yarn cache clean

CMD ["yarn", "workspace", "jwt-demo-frontend", "dev"]
